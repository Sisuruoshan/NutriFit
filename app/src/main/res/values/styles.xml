<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="FilterChipActive">
        <item name="android:backgroundTint">#00FF99</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FilterChipInactive">
        <item name="android:backgroundTint">#2E2E2E</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:tint">#777777</item>
    </style>
    <style name="ChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="BottomNavIconActive" parent="BottomNavIcon">
        <item name="android:tint">#00FF66</item>
    </style>

</resources>