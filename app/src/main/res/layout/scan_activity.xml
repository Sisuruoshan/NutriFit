<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:letterSpacing="0.1"
        android:text="FOOD SCANNER"
        android:textColor="#6D8315"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Scan Food Button -->
    <LinearLayout
        android:id="@+id/scanButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/headerTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background_dark"

        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/green_chip"
            android:backgroundTint="#697E14" />

        <Button
            android:id="@+id/scanFoodButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#00FFFFFF"
            android:text="Scan Food"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/green_chip" />

    </LinearLayout>

    <!-- Scanner Frame -->
    <FrameLayout
        android:id="@+id/scannerFrameContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/scanButtonLayout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/scannerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scanner_frame"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Point camera at food label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="or barcode for instant analysis"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

    </FrameLayout>

    <!-- Result Text (hidden by default) -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerFrameContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Detected: "
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Pro Tip -->
    <LinearLayout
        android:id="@+id/proTipLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerFrameContainer"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"

        android:orientation="horizontal"
        android:padding="15dp">

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/proTipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pro Tip: Ensure good lighting and steady hands"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="14sp" />

        <Button
            android:id="@+id/captureImageButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"


            android:backgroundTint="#6D8315"
            android:drawableTint="#445589"
            android:text="CAPTURE IMAGE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/manualEntryButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="MANUAL ENTRY"
            android:textColor="#6D8315"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:strokeColor="#6D8315"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#1E1E2C"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#2A2A42"
            android:backgroundTint="#1E1E2C"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            app:tint="#777777" />

        <ImageView
            android:id="@+id/navLocation"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_location"
            app:tint="#777777" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_profile"
            app:tint="#777777" />

        <ImageView
            android:id="@+id/navScan"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_scan"
            app:tint="#76FF03" />

        <ImageView
            android:id="@+id/navSetting"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_settings"
            app:tint="#777777" />
    </LinearLayout>

</RelativeLayout>