<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- NutriFit Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="276dp"
            android:layout_height="244dp"
            android:layout_marginTop="40dp"
            android:contentDescription="NutriFit Logo"
            android:src="@drawable/nutrifit_logo" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="277dp"
            android:layout_height="53dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Login with your email to access yout personalized plan"
            android:textAlignment="center"
            android:textColor="#FBEFE9"
            android:textSize="16sp" />

        <!-- Email Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FBEFE9"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/resetEmailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_input"
            android:hint="Enter email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC" />

        <!-- Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FBEFE9"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC" />

        <!-- Login Button -->
        <Button
            android:id="@+id/VerifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6E8415"
            android:text="LOG IN"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Forgot password?"
            android:textColor="#2C2B2E"
            android:textSize="14sp" />

        <!-- OR separator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Create Account -->
        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="#5E2222"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
